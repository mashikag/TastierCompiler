//This program is a simple test of global and local variables and loops

program Test {
  int i;

  void Main() {
    write -3;
    read i;
    if (i > 10) {
      int sum;
      sum = 0;
      while (i > 0) {
        sum = sum + i; i = i - 1;
      }
      write sum;
    } else {
      write i;
    }
  }
}
